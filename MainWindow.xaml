<Window x:Class="LR2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LR2"
        mc:Ignorable="d"
        Title="MainWindow" Height="485" Width="850" Loaded="Window_Loaded">
    <Grid>

        <Label Content="Просмотр погоды" HorizontalAlignment="Center" Margin="0,14,0,0" VerticalAlignment="Top" FontSize="20" Height="45" Width="180"/>
        <ScrollViewer Margin="10,70,10,70" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="warpPanelWeather" Height="Auto" Width="Auto"/>
        </ScrollViewer>
        <Label x:Name="laebLoad" Content="Загрузка" FontSize="20" Height="45" Width="90" RenderTransformOrigin="0.694,0.868"/>
        <Button x:Name="buttonMinus" Content="Прошлые 10" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonMinus_Click"/>
        <Button x:Name="buttonPlus" Content="Следующие 10" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonPlus_Click"/>


    </Grid>
</Window>
